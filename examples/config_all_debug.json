{
    "tools": {
        "build": {
            "enabled": true,
            "autoreject": false,
            "bin": "gcc",
            "check": {
                "autoreject": true
            }
        },
        "cppcheck": {
            "enabled": true,
            "autoreject": false,
            "bin": "cppcheck",
            "arguments": "",
            "checks": [
                {
                    "check": "error",
                    "enabled": true,
                    "autoreject": false,
                    "limit": 0
                },
                {
                    "check": "warning",
                    "enabled": true,
                    "autoreject": false,
                    "limit": 3
                },
                {
                    "check": "style",
                    "enabled": true,
                    "autoreject": false,
                    "limit": 3
                },
                {
                    "check": "performance",
                    "enabled": true,
                    "autoreject": false,
                    "limit": 2
                },
                {
                    "check": "portability",
                    "enabled": true,
                    "autoreject": false,
                    "limit": 0
                },
                {
                    "check": "information",
                    "enabled": true,
                    "autoreject": false,
                    "limit": 0
                },
                {
                    "check": "unusedFunction",
                    "enabled": true,
                    "autoreject": false,
                    "limit": 0
                },
                {
                    "check": "missingInclude",
                    "enabled": true,
                    "autoreject": false,
                    "limit": 0
                }
            ]
        },
        "valgrind": {
			"enabled": true,
            "autoreject": false,
            "bin": "valgrind",
			"arguments": "",
            "compiler": "gcc",
            "checks": [
                {
                    "check": "errors",
					"enabled": true,
                    "autoreject": true,
                    "limit": 0
                },
                {
                    "check": "leaks",
					"enabled": true,
                    "autoreject": true,
                    "limit": 0
                }
            ]
        }
    }
}