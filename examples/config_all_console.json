{
    "tools": {
        "build": {
            "enabled": true,
            "autoreject": false,
            "bin": "gcc",
            "check": {
                "autoreject": true
            }
        },
        "cppcheck": {
            "enabled": true,
            "autoreject": false,
            "bin": "cppcheck",
            "arguments": "",
            "checks": [
                {
                    "check": "error",
                    "enabled": true,
                    "autoreject": false,
                    "limit": 0
                },
                {
                    "check": "warning",
                    "enabled": true,
                    "autoreject": false,
                    "limit": 3
                },
                {
                    "check": "style",
                    "enabled": true,
                    "autoreject": false,
                    "limit": 3
                },
                {
                    "check": "performance",
                    "enabled": true,
                    "autoreject": false,
                    "limit": 2
                },
                {
                    "check": "portability",
                    "enabled": true,
                    "autoreject": false,
                    "limit": 0
                },
                {
                    "check": "information",
                    "enabled": true,
                    "autoreject": false,
                    "limit": 0
                },
                {
                    "check": "unusedFunction",
                    "enabled": true,
                    "autoreject": false,
                    "limit": 0
                },
                {
                    "check": "missingInclude",
                    "enabled": true,
                    "autoreject": false,
                    "limit": 0
                }
            ]
        },
        "valgrind": {
			"enabled": true,
            "autoreject": false,
            "bin": "valgrind",
			"arguments": "",
            "compiler": "gcc",
            "checks": [
                {
                    "check": "errors",
					"enabled": true,
                    "autoreject": true,
                    "limit": 0
                },
                {
                    "check": "leaks",
					"enabled": true,
                    "autoreject": true,
                    "limit": 0
                }
            ]
        },
        "clang-format": {
			"enabled": true,
            "autoreject": false,
            "bin": "clang-format",
            "arguments": "",
            "check": {
                "autoreject": true,
                "level": "strict",
                "limit": 5
            }
        },
        "catch2": {
            "enabled": true,
            "autoreject": false,
            "test_path": [
                "examples/test_example_1.cpp", "examples/test_example_2.cpp"
            ],
            "check": {
                "autoreject": true,
                "limit": 0
            }
       },
        "copydetect": {
 			"enabled": true,
            "autoreject": false,
            "bin": "copydetect",
			"arguments": "",
            "check": {
                "autoreject": true,
                "limit": 50
            }
       }
    }
}